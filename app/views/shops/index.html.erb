
<div id="car">
  <%= render "cards/card"%>
</div>
<br>
<div class="container">  
  <div class="row" id="row">
    <% @products.each do |p| %>     
          <div class="col-sm-6" id="col_1">
            <div class="card">
              <div class="card-body">
                <strong>ID:</strong> <%= p.id %>
                <%= image_tag p.image, :class=>"image_show_product" %><br> 
                <strong>Product:</strong> <%= p.name %><br>
                <strong>Description:</strong> <%= p.description %><br>
                <strong>Price:</strong> $<%= p.price %><br>
                <%= link_to 'Show Product', shop_path(p), :class =>"btn btn-success" %>
                  <div class="form_insert">
                      <%= form_for @order_item, remote: true do |f|%>
                        <%= f.hidden_field :product_id, :value => p.id %>
                        <%= f.number_field :quantity, :value => 1, :min => 1, :class=>"qtd_items"%>
                        <%= f.submit "Add to Card", :class => "btn btn-primary"%>
                      <% end %>
                  </div>
              </div>
            </div>
          </div>        
      <% end %>
   </div> 
  </div>


